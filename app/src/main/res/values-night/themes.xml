<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FootballLeague" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textViewTitle" parent="textViewTitleGeneral">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewBody" parent="textViewBodyGeneral">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="textViewSmall" parent="textViewSmallGeneral">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="tabLayout" parent="Theme.FootballLeague">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/black</item>
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabRippleColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
    </style>

</resources>