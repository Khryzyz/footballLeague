<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FootballLeague" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FootballLeague.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FootballLeague.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FootballLeague.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textViewTitle" parent="textViewTitleGeneral">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textViewBody" parent="textViewBodyGeneral">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="textViewSmall" parent="textViewSmallGeneral">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

</resources>