<resources>

    <!--Guidelines-->

    <style name="guideLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--Cards-->
    <style name="card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <!--Cards-->
    <style name="textViewTitleGeneral">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewBodyGeneral">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="textViewSmallGeneral">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <!--Animation-->
    <style name="animation">
        <item name="android:layout_width">@dimen/size_animation</item>
        <item name="android:layout_height">@dimen/size_animation</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
    </style>

</resources>